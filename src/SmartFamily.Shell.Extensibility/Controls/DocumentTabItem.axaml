<Styles xmlns="https://github.com/avaloniaui"
        xmlns:local="clr-namespace:SmartFamily.Controls;assembly=SmartFamily.Shell.Extensibility">
  <Style Selector="local|DocumentTabItem">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Focusable" Value="True" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border BorderThickness="1" BorderBrush="{DynamicResource ApplicationBorderBrush}" Background="{DynamicResource ControlBackgroundBrush}">
          <Grid Margin="4">
            <ContentPresenter Grid.Row="1"
                              Name="PART_ContentPresenter"
                              Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              Content="{TemplateBinding Content}"
                              Padding="{TemplateBinding Padding}" />
          </Grid>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>