<UserControl x:Class="SmartFamily.Shell.Extensibility.MainMenu.Views.MainMenuView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SmartFamily.Extensibility.Converters;assembly=SmartFamily.Shell.Extensibility"
             xmlns:beh="clr-namespace:SmartFamily.Shell.Extensibility.Behaviors;assembly=SmartFamily.Shell.Extensibility"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:mod="clr-namespace:SmartFamily.Menus.Models;assembly=SmartFamily.Shell.Extensibility"
             xmlns:vmod="clr-namespace:SmartFamily.Menus.ViewModels;assembly=SmartFamily.Shell.Extensibility">
  <Panel>
    <i:Interaction.Behaviors>
      <beh:AttachNativeMenuBehavior>
        <beh:AttachNativeMenuBehavior.Menu>
          <NativeMenu>
            <i:Interaction.Behaviors>
              <beh:BindNativeMenuBehavior x:DataType="vmod:MenuViewModel" Items="{CompiledBinding Items, Converter={x:Static converters:NativeMenuConverter.Instance}}" />
            </i:Interaction.Behaviors>
          </NativeMenu>
        </beh:AttachNativeMenuBehavior.Menu>
      </beh:AttachNativeMenuBehavior>
    </i:Interaction.Behaviors>

    <Menu Items="{CompiledBinding Items}" x:DataType="vmod:MenuViewModel">
      <i:Interaction.Behaviors>
        <beh:HideWhenNativeMenuExportedBehavior />
      </i:Interaction.Behaviors>
      <Menu.Styles>
        <Style Selector="AccessText">
          <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="MenuItem" x:DataType="mod:MenuItemModel">
          <Setter Property="Command" Value="{CompiledBinding Command}" />
          <Setter Property="Items" Value="{CompiledBinding Children}" />
          <Setter Property="Icon">
            <Setter.Value>
              <Template>
                <DrawingPresenter Drawing="{CompiledBinding Icon}" />
              </Template>
            </Setter.Value>
          </Setter>
          <Setter Property="Header" Value="{CompiledBinding Label}" />
        </Style>
      </Menu.Styles>
    </Menu>
  </Panel>
</UserControl>