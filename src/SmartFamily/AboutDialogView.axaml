<UserControl x:Class="SmartFamily.AboutDialogView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource ThemeBackgroundBrush}" MinWidth="800" MinHeight="600">
  <DockPanel>
    <Grid DockPanel.Dock="Top" Background="WhiteSmoke">
      <StackPanel Orientation="Horizontal" Spacing="12">
        <Image Source="avares://SmartFamily/Assets/logo-65.png" Stretch="None" Width="65" Height="65" Margin="20" />
        <TextBlock Text="Smart Family" FontSize="50" VerticalAlignment="Center" />
      </StackPanel>
    </Grid>
    <Grid>
      <StackPanel Spacing="10">
        <StackPanel Orientation="Horizontal" Spacing="4">
          <TextBlock Text="Version:" />
          <TextBlock Text="{Binding Version}" />
        </StackPanel>
      </StackPanel>
    </Grid>
  </DockPanel>
</UserControl>