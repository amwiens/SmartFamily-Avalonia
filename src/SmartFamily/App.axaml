<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SmartFamily"
             x:Class="SmartFamily.App">
  <Application.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />

    <StyleInclude Source="avares://SmartFamily/Resources/Themes/BaseDark.axaml" />
    <StyleInclude Source="avares://SmartFamily/Resources/TablerIcons.axaml" />
    <StyleInclude Source="avares://SmartFamily/Resources/LogoPlain.axaml" />

    <Style Selector="TabItem">
      <Setter Property="FontSize" Value="11" />
      <Setter Property="Padding" Value="7,2,7,3" />
      <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <local:ViewModelLocator x:Key="Locator" />
    </ResourceDictionary>
  </Application.Resources>
</Application>